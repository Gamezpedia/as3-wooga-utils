package  net.wooga.utils.display {	import flash.display.Bitmap;	import flash.display.Sprite;	import flash.events.Event;	public class BitmapPlayer extends Sprite {		private var _frames:Vector.<FrameDataVO> = new Vector.<FrameDataVO>();		private var _bitmap:Bitmap = new Bitmap();		private var _totalFrames:int = 0;		private var _currentFrame:int = 0;		public function BitmapPlayer() {			addChild(_bitmap);		}		private function onFrame(event:Event):void {			update();		}		public function set frames(value:Vector.<FrameDataVO>):void {			_frames = value;			_totalFrames = _frames.length;			removeEventListener(Event.ENTER_FRAME, onFrame);			if (_totalFrames) {				setCurrentFrame();				addEventListener(Event.ENTER_FRAME, onFrame);			}		}		public function update():void {			if (_currentFrame == _totalFrames - 1) {				_currentFrame = 0;			} else {				++_currentFrame;			}			setCurrentFrame();		}		private function setCurrentFrame():void {			var data:FrameDataVO = _frames[_currentFrame];			_bitmap.bitmapData = data.bitmapData;			_bitmap.x = data.offsetX;			_bitmap.y = data.offsetY;			_bitmap.scaleX = _bitmap.scaleY = 1 / data.scale;		}	}}