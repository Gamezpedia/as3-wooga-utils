package  net.wooga.utils.display {	import flash.display.Bitmap;	import flash.display.Sprite;	import net.wooga.utils.interfaces.IMoviePlayer;	import net.wooga.utils.types.Numbers;	public class BitmapPlayer extends Sprite implements IMoviePlayer {		private var _frames:Vector.<FrameDataVO> = new Vector.<FrameDataVO>();		private var _bitmap:Bitmap = new Bitmap();		private var _totalFrames:int = 0;		private var _currentFrame:int = 0;		public function BitmapPlayer(value:Vector.<FrameDataVO>) {			addChild(_bitmap);						_frames = value;			_totalFrames = _frames.length;			if (_totalFrames) {				frame = 0;			}		}		public function play(step:Number):void {		}		public function set frame(frame:int):void {			_currentFrame = frame;			var data:FrameDataVO = _frames[_currentFrame];			_bitmap.bitmapData = data.bitmapData;			_bitmap.x = data.offsetX;			_bitmap.y = data.offsetY;			_bitmap.scaleX = _bitmap.scaleY = 1 / data.scale;		}		public function gotoRandomFrame():void {			frame = Numbers.randomIntBetween(0, _totalFrames - 1);		}		public function get totalFrames():int {			return _totalFrames;		}		public function get currentFrame():int {			return _currentFrame;		}	}}